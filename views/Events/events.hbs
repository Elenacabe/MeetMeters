<div class="page-content">

    <div class="container"><a class="btn btn-dark" href="/events/events-create">Create an event</a></div>
    <hr>

    <div class="container">

        <div class="row">



            {{#each events}}
            <div class="card col-md-3 col-lg-3 marginR mr-2">

                <img src="{{cover}}" class="card-img-top marginIm" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{tdescription}}</p>
                    <p class="card-text"><small class="text-muted">{{startDate}}-{{endDate}}</small></p>
                    <p class="card-text">The subscription is {{type}}</p>
                    <div class="row">
                        <div class="col md-6">
                            <form action="/events/add/{{id}}" method="POST">
                                <button type="submit" class="btn btn-outline-dark mt-3">Sign Up!</button>
                            </form>
                        </div>
                        <div class="col md-6">
                            <a href="/events/details/{{id}}"><button type="button"
                                    class="btn btn-dark mt-3">Information</button></a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}



        </div>
    </div>
</div>