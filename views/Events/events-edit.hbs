<div class="container page-content">
    <form action="/events/edit/{{_id}}" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="usernameInput" class="form-label">Edit the title</label>
            <input type="text" class="form-control" value="{{name}}" id="usernameInput" name="name">
        </div>

        <div class="mb-3">
            <label for="cover" class="form-label">Edit the cover</label>
            <input type="file" class="form-control" id="cover" name="cover">
        </div>

        <div class="mb-3">
            <label for="descriptionInput" class="form-label">Change the description</label>
            <input type="text" value="{{description}}" class="form-control" id="descriptionInput" rows="3"
                name="description">
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Change the location</label>
            <hr>
            <label>Longitude</label>
            <input type="text" value="{{location.coordinates.[0]}}" class="form-control" id="descriptionInput" rows="3"
                name="longitude"> <br>
            <label>Latitude</label>
            <input type="text" value="{{location.coordinates.[1]}}" class="form-control" id="descriptionInput" rows="3"
                name="latitude">
        </div> <br>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark block">Submit</button>
        </div>
    </form>
</div>